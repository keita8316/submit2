<p class="error">
<% if @book.errors.any? %>
  <%= @book.errors.count %>error!
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
</p>
<div class="container">
  <div class="row"> 
    <div class="col-lg-4">
      <%= attachment_image_tag @user, :profile_image, fallback: "no-image.png" %>
      <%= @user.name %>
      <%= @user.introduction %>
      <%= link_to "edit", edit_user_path(@user) %>
      
      <p>
        <h1>New book</h1>
        
        <%= form_with model:@book, url:books_path, local:true do |f| %>
        
        <p>Title<br>
          <%= f.text_field :title %>
        </p>
        <p>Body<br>
          <%= f.text_area :body %>
        </p>
        <p>
          <%= f.submit "Create Book" %>
        </p>
      
      
        <% end %>
      </p>
      <p class="message">
        <% flash.each do |message_type, message| %>
          <%= message %>
        <% end %>
        
      </p>
    </div>
    
    <div class="col-lg-8">
      <h1>Books</h1>
      <p>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="title">Title</th>
                    <th class="body">Body</th>
                    <th class="link"></th>
                </tr>
            </thead>
            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td class="photo"><%= attachment_image_tag @user, :profile_image, fallback: "no-image.png" %></td>
                  <td class="title"><%= link_to book.title, book_path(book.id) %></td>
                  <td class="body"><%= book.body %></td>
                  <td class="link">
                    <% if book.user.id == current_user.id %>
                      <%= link_to "Edit", edit_book_path(book), class: "btn btn-secondary" %>
                      <span>&nbsp</span>
                      <%= link_to "Destroy", book_path(book),method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-secondary" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
      </P>
    </div>
      
  </div>
</div>