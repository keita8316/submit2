<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>
<p class="message">
<% flash.each do |message_type, message| %>
  <%= message %>
<% end %>

</p>
<h1>Books</h1>
<p>
<table>
    <thead>
        <tr>
            <th class="title">Title</th>
            <th class="body">Body</th>
            <th class="link"></th>
        </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
            <td class="title"><%= book.title %></td>
            <td class="body"><%= book.body %></td>
            <td class="link">
              <%= link_to "Show", book_path(book) %>
              <span>&nbsp</span>
              <%= link_to "Edit", edit_book_path(book) %>
              <span>&nbsp</span>
              <%= link_to "Destroy", book_path(book),method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
        </tr>
      <% end %>
    </tbody>
</table>
</P>

<p class="error">
<% if @book.errors.any? %>
  <%= @book.errors.count %>error!
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
</p>
<p>
<h1>New book</h1>

<%= form_with model:@book, url:books_path, local:true do |f| %>

  <p>Title<br>
  <%= f.text_field :title %>
  </p>
  <p>Body<br>
  <%= f.text_area :body %>
  </p>
  <p>
  <%= f.submit "Create Book" %>
  </p>
<% end %>
</p>