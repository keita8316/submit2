<div class="home">
<p class="message">
<% flash.each do |message_type, message| %>
  <%= message %>
<% end %>
</p>
<h1>Editing Book</h1>
<%= form_with model:@book, url:book_path(@book), local:true do |f| %>
  <p>Title<br>
  <%= f.text_field :title %></p>
  <p>Body<br>
  <%= f.text_area :body %></p>
  <p><%= f.submit "Update Book" %></p>
<% end %>
<%= link_to "Show", book_path(@book) %>
<span>|</span>
<%= link_to "Back", books_path %>

</div>