<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>
<p class="message">
<% flash.each do |message_type, message| %>
  <%= message %>
<% end %>
</p>

<%= attachment_image_tag @user, :profile_image, fallback: "no-image.png" %>
<%= @user.name %>
<%= @user.introduction %>
<%= link_to "edit", edit_user_path(@user) %>

<p>
<table>
    <thead>
        <tr>
            <th class="title">Title</th>
            <th class="body">Body</th>
            <th class="link"></th>
        </tr>
    </thead>
    <tbody>
      
        <tr>
            <td class="title"><%= @hon.title %></td>
            <td class="body"><%= @hon.body %></td>
            <td class="link">
              <%= link_to "Edit", edit_book_path(@hon) %>
              <span>&nbsp</span>
              <%= link_to "Destroy", book_path(@hon),method: :delete, data: {confirm: "Are you sure?"} %>
            </td>
        </tr>
     
    </tbody>
</table>
</P>

<h1>New book</h1>

<%= form_with model:@book, url:books_path, local:true do |f| %>

  <p>Title<br>
  <%= f.text_field :title %>
  </p>
  <p>Body<br>
  <%= f.text_area :body %>
  </p>
  <p>
  <%= f.submit "Create Book" %>
  </p>
<% end %>
</p>




