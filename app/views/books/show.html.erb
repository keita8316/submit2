
<p class="message">
<% flash.each do |message_type, message| %>
  <%= message %>
<% end %>
</p>

<%= attachment_image_tag @hito, :profile_image, fallback: "no-image.png" %>
<%= @hito.name %>
<%= @hito.introduction %>
<%= link_to edit_user_path(@hito) do %>
    <i class="fas fa-user-cog"></i>
<% end %>



<p>
<h1>Book detail</h1>
<table>
    <thead>
        <tr>
            <th class="user"></th>
            <th class="title"></th>
            <th class="body"></th>
            <th class="link"></th>
        </tr>
    </thead>
    <tbody>
      
        <tr>
            <td class="user"><%= link_to (attachment_image_tag @hito, :profile_image, fallback: "no-image.png"), user_path(@hito) %><br><%= link_to @hito.name, user_path(@hito) %></td>
            <td class="title"><%= @hon.title %></td>
            <td class="body"><%= @hon.body %></td>
            <td class="link">
                <% if @hon.user.id == current_user.id %>
                    <%= link_to "Edit", edit_book_path(@hon), class: "btn btn-secondary" %>
                    <span>&nbsp</span>
                    <%= link_to "Destroy", book_path(@hon),method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-secondary" %>
                <% end %>
            </td>
        </tr>
     
    </tbody>
</table>
</P>

<h1>New book</h1>

<%= form_with model:@book, url:books_path, local:true do |f| %>

  <p>Title<br>
  <%= f.text_field :title %>
  </p>
  <p>Body<br>
  <%= f.text_area :body %>
  </p>
  <p>
  <%= f.submit "Create Book" %>
  </p>
<% end %>
</p>




