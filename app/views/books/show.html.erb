
<p class="message">
<% flash.each do |message_type, message| %>
  <%= message %>
<% end %>
</p>
<div class="container">
  <div class="row"> 
    <div class="col-md-3">
        <p>
            <h2>User info</h2>
            <%= attachment_image_tag @hito, :profile_image, fallback: "no-image.png", size: '100x100' %><br>
            <table>
                <tr>
                    <th>name</th><td><%= @hito.name %></td>
                </tr>
                <tr>
                    <th>introduction</th><td><%= @hito.introduction %></td>
                </tr>
            </table>
            <div class="cog">
                <%= link_to edit_user_path(@hito),class: "btn btn-secondary" do %>
                    <i class="fas fa-user-cog"></i>
                <% end %>
            </div>
            
            <br>
            <h2>New book</h2>
            
            <%= form_with model:@book, url:books_path, local:true do |f| %>
            
              <p>Title<br>
              <%= f.text_field :title %>
              </p>
              <p>Body<br>
              <%= f.text_area :body %>
              </p>
              <p>
              <%= f.submit "Create Book" %>
              </p>
            <% end %>
        </p>
        
    </div>
    <div class="col-md-8 offset-md-1">
        
        
            <h1>Book detail</h1>
            
            <table class="table table-striped">
                
                <tbody>
                  
                    <tr>
                        <td class="user"><%= link_to (attachment_image_tag @hito, :profile_image, fallback: "no-image.png", size: '100x100'), user_path(@hito) %><br><%= link_to @hito.name, user_path(@hito) %></td>
                        <td class="title"><%= @hon.title %></td>
                        <td class="body"><%= @hon.body %></td>
                        <td class="good">
                            <% if current_user.iine(@hon) %>
                              <%= link_to book_favorites_path(@hon), method: :delete do %>
                                <i class="fas fa-heart"></i>
                              <% end %>
                            <% else %>
                              <%= link_to book_favorites_path(@hon), method: :post do %>
                                <i class="far fa-heart"></i>
                              <% end %>
                            <% end %>
                            <%= @hon.favorites.count %>
                        </td>
                        <td class="link">
                            <% if @hon.user.id == current_user.id %>
                                <%= link_to "Edit", edit_book_path(@hon), class: "btn btn-secondary" %>
                                <span>&nbsp</span>
                                <%= link_to "Destroy", book_path(@hon),method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-secondary" %>
                            <% end %>
                        </td>
                    </tr>
                 
                </tbody>
            </table>
            <div>
                <p><%= @hon.book_comments.count %>comments</p>
                <%= form_with(model:[@hon, @book_comment], local: true) do |f| %>
                
                  <p class="comment">comment<br>
                  <%= f.text_area :comment %>
                  </p>
                  <p>
                  <%= f.submit "送信" %>
                  </p>
                <% end %>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="title">User</th>
                        <th class="body">Comment</th>
                       
                        <th class="link"></th>
                    </tr>
                </thead>
                <tbody>
                  <% @hon.book_comments.each do |come| %>
                    <tr>
                      <td class="photo"><%= link_to (attachment_image_tag come.user, :profile_image, fallback: "no-image.png", size: '100x100'), user_path(come.user) %><br><%= come.user.name %></td>
                      
                      <td class="body"><%= come.comment %></td>
                      
                      <td class="link">
                        <% if come.user.id == current_user.id %>
                          <%= link_to "Destroy", book_book_comment_path(@hon,come),method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-secondary" %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
            </table>
        
        
    </div>
  </div>
</div>








