<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>
<p class="message">
<% flash.each do |message_type, message| %>
  <%= message %>
<% end %>
</p>

<%= attachment_image_tag @user, :profile_image, fallback: "no-image.png" %>
<%= @user.name %>
<%= @user.introduction %>
<%= link_to "edit", edit_user_path(@user) %>

<br>
<div class="book">
<p><b>Title:</b>
<%= @book.title %></p><br>
<p><b>Body:</b>
<%= @book.body %></p>
</div><br>
<%= link_to "Edit", edit_book_path(@book.id) %>
<span>|</span>
<%= link_to "Back", user_path(@user) %>

<h1>New book</h1>

<%= form_with model:@book, url:books_path, local:true do |f| %>

  <p>Title<br>
  <%= f.text_field :title %>
  </p>
  <p>Body<br>
  <%= f.text_area :body %>
  </p>
  <p>
  <%= f.submit "Create Book" %>
  </p>
<% end %>
</p>




